(defun increase-power-cell-by-one ()
;;this function sets argument one (-> *game-info* fuel) to the value of argument two
;;(+ (-> *game-info* fuel) 1)   (the current powercell count + 1)
(set! (-> *game-info* fuel) (+ (-> *game-info* fuel) 1))
(none)
)

